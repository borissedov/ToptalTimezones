{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "lib": [ "es6", "dom" ],
    "noImplicitAny": false,
    "types": [ "webpack-env" ],
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ]
  },
  "exclude": [
    "bin",
    "node_modules",
    "ClientApp/dist",
    "wwwroot"
  ],
  "awesomeTypescriptLoaderOptions": {
    "resolveGlobs": true,
    "forkChecker": true
  },
  "typeRoots": [
    "./node_modules/@types",
    "./@types"
  ]
}
